{
  "name": "latex-matrix-converter",
  "displayName": "LaTeX Matrix Converter",
  "description": "Convert plain text matrices to LaTeX bmatrix format",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "license": "MIT",
  "categories": ["Formatters", "Programming Languages"],
  "keywords": ["latex", "matrix", "math", "converter"],
  "publisher": "25benjaminli",
  "homepage": "https://github.com/25benjaminli/latex-matrix-converter",
  "repository": {
    "type": "git",
    "url": "https://github.com/25benjaminli/latex-matrix-converter.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "latexMatrixConverter.convertToBmatrix",
        "title": "Convert to LaTeX bmatrix"
      },
      {
        "command": "latexMatrixConverter.convertToPmatrix",
        "title": "Convert to LaTeX pmatrix"
      }
    ],
    "keybindings": [
      {
        "command": "latexMatrixConverter.convertToBmatrix",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "latexMatrixConverter.convertToBmatrix",
          "group": "1_modification@1"
        },
        {
          "when": "editorHasSelection",
          "command": "latexMatrixConverter.convertToPmatrix",
          "group": "1_modification@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}